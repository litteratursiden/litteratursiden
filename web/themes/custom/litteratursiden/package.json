{
  "name": "litteratursiden",
  "version": "1.0.0",
  "description": "Drupal theme for litteratursiden",
  "scripts": {
    "check-coding-standards-stylelint": "stylelint --config=.stylelintrc.js 'assets/**/*.scss'",
    "check-coding-standards-scss": "npm run check-coding-standards-stylelint",
    "check-coding-standards-eslint": "eslint --config .eslintrc.js 'assets/**/*.js'",
    "check-coding-standards-js": "npm run check-coding-standards-eslint",
    "check-coding-standards": "npm run check-coding-standards-scss; npm run check-coding-standards-js",
    "apply-coding-standards-stylelint": "stylelint --config=.stylelintrc.js 'assets/**/*.scss' --fix",
    "apply-coding-standards-scss": "npm run apply-coding-standards-stylelint",
    "apply-coding-standards-eslint": "eslint --config .eslintrc.js 'assets/**/*.js' --fix",
    "apply-coding-standards-js": "npm run apply-coding-standards-eslint",
    "apply-coding-standards": "npm run apply-coding-standards-scss; npm run apply-coding-standards-js",
    "build": "encore production",
    "dev": "encore dev",
    "watch": "encore dev --watch"
  },
  "author": "Martin Yde",
  "license": "GPL",
  "repository": {
    "type": "git",
    "url": "https://github.com/litteratursiden/litteratursiden"
  },
  "private": true,
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.12.1",
    "@fortawesome/fontawesome-pro": "^5.12.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-brands-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.12.1",
    "@fortawesome/pro-light-svg-icons": "^5.12.1",
    "@symfony/webpack-encore": "^1.5.0",
    "autoprefixer": "^9.4.2",
    "copy-webpack-plugin": "^6.1.0",
    "node-sass": "^4.14.1",
    "bootstrap-sass": "^3.3.7",
    "node-sass-import-once": "^1.2.0",
    "sass-lint": "^1.7.0",
    "sass-loader": "^12.1.0",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-config-standard-scss": "^1.1.0",
    "stylelint-scss": "^3.20.1",
    "webpack-notifier": "^1.6.0"
  },
  "dependencies": {
  }
}
